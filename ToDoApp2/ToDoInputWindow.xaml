<Window x:Class="ToDoApp2.ToDoInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoApp2"
        mc:Ignorable="d"
        Title="ToDoInputWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="タイトル" VerticalAlignment="Stretch" FontSize="20"/>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch"/>
        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="メモ・備考" VerticalAlignment="Stretch" FontSize="20"/>
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch"/>
        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="日付" VerticalAlignment="Stretch" FontSize="20"/>
        <Button Grid.Row="4" Grid.Column="2" Content="OK" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button Grid.Row="4" Grid.Column="1" x:Name="Cancel" Content="Cancel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <DatePicker Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <DatePicker Grid.Row="2" Grid.Column="2" HorizontalAlignment="Stretch"/>
        <Button Grid.Row="3" Grid.Column="0" x:Name="ImageChoose" Content="画像を追加" HorizontalAlignment="Stretch" Margin="47,59,0,0" VerticalAlignment="Stretch"/>
        <Image Grid.Row="3" Grid.Column="1" x:Name="SelectedImage" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AllowDrop="True"/>
    </Grid>
</Window>
